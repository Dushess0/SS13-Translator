<div class='notice'>
	{{if data.siliconUser}}
		<div class="itemContentSmall">
			Панель управления:
		</div>
		<div class="itemContentFull">
			{{:helper.link('Заблокирована', 'locked', {'toggleaccess' : 1}, data.locked ? 'selected' : null)}}{{:helper.link('Разблокирована', 'unlocked', {'toggleaccess' : 1}, data.malfStatus >= 2 ? 'Отключена' : (data.locked ? null : 'selected'))}}
		</div>
		<div class="clearBoth"></div>
	{{else}}
		{{if data.locked}}
			Проведите ID картой что бы разблокировать
		{{else}}
			Проведите ID картой что бы заблокировать
		{{/if}}
	{{/if}}
</div>

<div style="min-width: 480px">

	<h3>Состояние питания</h3>

	<div class="item">
		<div class="itemLabel">
			Главный рубильник:
		</div>
		<div class="itemContent">
			{{if data.locked && !data.siliconUser}}
				{{if data.isOperating}}
					<span class='good'>Включен</span>
				{{else}}
					<span class='bad'>Выключен</span>
				{{/if}}
			{{else}}
				{{:helper.link('Включен', 'power', {'breaker' : 1}, data.isOperating ? 'selected' : null)}}{{:helper.link('Выключен', 'close', {'breaker' : 1}, data.isOperating ? null : 'selected')}}
			{{/if}}
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Внешнее питание:
		</div>
		<div class="itemContent">
			{{if data.externalPower == 2}}
				<span class='good'>Отлично</span>
			{{else data.externalPower == 1}}
				<span class='average'>Низко</span>
			{{else}}
				<span class='bad'>Отсутсвует</span>
			{{/if}}
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Батарейка:
		</div>
		{{if data.powerCellStatus == null}}
			<div class="itemContent bad">		
				Батарейка отсутсвует.
			</div>
		{{else}}
			
			{{:helper.displayBar(data.powerCellStatus, 0, 100, (data.powerCellStatus >= 50) ? 'good' : (data.powerCellStatus >= 25) ? 'average' : 'bad')}}
			<div class="itemContent" style="width: 60px">		
				{{:helper.round(data.powerCellStatus*10)/10}}%
			</div>	
		{{/if}}
	</div>

	{{if data.powerCellStatus != null}}
		<div class="item">
			<div class="itemLabel">
				Режим зарядки:
			</div>
			<div class="itemContent">
				{{if data.locked && !data.siliconUser}}
					{{if data.chargeMode}}
						<span class='good'>Авто</span>
					{{else}}
						<span class='bad'>Выключено</span>
					{{/if}}				
				{{else}}
					{{:helper.link('Авто', 'refresh', {'cmode' : 1}, data.chargeMode ? 'selected' : null)}}{{:helper.link('Выключить', 'close', {'cmode' : 1}, data.chargeMode ? null : 'selected')}}
				{{/if}}
				&nbsp;
				{{if data.chargingStatus > 1}}
					[<span class='good'>Полностью заряжен</span>]
				{{else data.chargingStatus == 1}}
					[<span class='average'>Заряжается</span>]
				{{else}}
					[<span class='bad'>Не заряжается</span>]
				{{/if}}
			</div>
		</div>
	{{/if}}


	<h3>Каналы питания</h3>

	{{for data.powerChannels}}
		<div class="item">
			<div class="itemLabel">
				{{:value.title}}:
			</div>
			<div class="itemContent" style="width: 70px; text-align: right">
				{{:value.powerLoad}}&nbsp;W
			</div>
			<div class="itemContent" style="width: 105px">
				&nbsp;&nbsp;
				{{if value.status <= 1}}
					<span class='bad'>Выключен</span>
				{{else value.status >= 2}}
					<span class='good'>Включен</span>
				{{/if}}
				{{if data.locked}}
					{{if value.status == 1 || value.status == 3}}
						&nbsp;&nbsp;Авто
					{{else}}
						&nbsp;&nbsp;Ручное
					{{/if}}		
				{{/if}}
			</div>
			{{if !data.locked || data.siliconUser}}
				<div class="itemContentFull">
					{{:helper.link('Авто', 'refresh', value.topicParams.auto, (value.status == 1 || value.status == 3) ? 'selected' : null)}}
					{{:helper.link('Включен', 'power', value.topicParams.on, (value.status == 2) ? 'selected' : null)}}
					{{:helper.link('Выключен', 'close', value.topicParams.off, (value.status == 0) ? 'selected' : null)}}
				</div>
			{{/if}}
		</div>
	{{/for}}

	<div class="item" style="font-weight: bold">
		<div class="itemLabel">
			Нагрузка на сеть:
		</div>
		<div class="itemContent">
			{{if data.totalCharging}}
				{{:data.totalLoad}}Вт (+ {{:data.totalCharging}}Вт Заряжается)
			{{else}}
				{{:data.totalLoad}}Вт
			{{/if}}
		</div>
	</div>

	<div class="item">&nbsp;</div>

	<div class="item">
		<div class="itemLabel">
			Заслонка:
		</div>
		<div class="itemContent">
			{{if data.locked && !data.siliconUser}}
				{{if data.coverLocked}}
					<span class='good'>Закрыта</span>
				{{else}}
					<span class='bad'>Открыта</span>
				{{/if}}
			{{else}}
				{{:helper.link('Закрыта', 'locked', {'lock' : 1}, data.coverLocked ? 'selected' : null)}}{{:helper.link('Открыта', 'unlocked', {'lock' : 1}, data.coverLocked ? null : 'selected')}}
			{{/if}}
		</div>
	</div>
	
	{{if !data.locked || data.siliconUser}}
		<div class="item">
			<div class="itemLabel">
				Night Shift Lighting:
			</div>
			<div class="itemContent">
				{{:helper.link(data.nightshift_lights ? 'Disable' : 'Enable', 'power', {'toggle_nightshift' : 1})}}
				{{if data.nightshift_lights}}
					{{:helper.link('Change theme', 'lightbulb', {'change_nightshift' : 1})}}
				{{/if}}
			</div>
		</div>
	{{/if}}

	{{if data.siliconUser}}
		<h3>System Overrides</h3>

		<div class="item">
			{{:helper.link('Overload Lighting Circuit', 'lightbulb', {'overload' : 1})}}
			{{if data.malfStatus == 1}}
				{{:helper.link('Override Programming', 'script', {'malfhack' : 1})}}
			{{else data.malfStatus > 1}}
				<div class='notice'>APC Hacked</div>
			{{/if}}
		</div>
	{{/if}}

</div>
		